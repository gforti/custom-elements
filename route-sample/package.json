{
    "name": "cedemo",
    "description": "Front End Custom Elements",
    "version": "0.0.1",
    "license": "MIT",
    "scripts": {
        "lint:js": "eslint --ext .js ./",
        "lint:css": "stylelint **/*.css",
        "lint": "rpm run lint:js && rpm run lint:css"
    },
    "eslintIgnore": [
        "build.js"
    ],
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "indent": [
                0,
                2
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "never"
            ]
        }
    },
    "stylelint" : {
        "extends": "stylelint-config-standard"
    },
    "devDependencies": {
        "eslint": "^5.7.0",
        "stylelint": "^9.6.0",
        "stylelint-config-standard": "^18.2.0",
        "webpack": "^4.17.1"
    }
}
